apt install qemu-system
kvm-ok

wget http://releases.ubuntu.com/noble/ubuntu-24.04-live-server-amd64.iso

qemu-img create -f qcow2 adh.cow 20G

qemu-system-x86_64 -m 4G -enable-kvm \
                   -cdrom ~/vm/ubuntu-24.04-live-server-amd64.iso \
                   -drive file=adh.cow,format=qcow2 \
                   -boot order=d
